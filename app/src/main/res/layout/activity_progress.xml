<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/btn_start1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始"
            />

        <Button
            android:id="@+id/btn_start2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始"
            />
    </LinearLayout>

    <com.wusongyuan.customviewstudio.widget.ProgressParView
        android:id="@+id/progressview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        />

    <com.wusongyuan.customviewstudio.widget.ShadowLayout
        android:id="@+id/shadowlayout"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="#55000000"
        android:clipChildren="false"
        app:sl_cornerRadius="21.5dp"
        app:sl_shadowColor="#aafff000"
        app:sl_shadowRadius="8dp"
        android:layout_marginTop="60dp"
        />
</FrameLayout>
